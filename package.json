{
  "name": "duckduki",
  "version": "1.0.0",
  "description": "Assistente desktop inteligente com IA generativa via Groq",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "setup": "node setup.js",
    "quick-start": "node start-dev.js",
    "dev": "npm run build && electron . --dev",
    "dev:renderer": "vite",
    "dev:main": "tsx watch src/main/index.ts",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "postinstall": "node setup.js"
  },
  "keywords": [
    "desktop",
    "ai",
    "productivity",
    "groq",
    "assistant"
  ],
  "author": "Duckduki",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "active-win": "^8.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "electron-store": "^8.1.0",
    "express": "^4.18.0",
    "keytar": "^7.9.0",
    "node-imap": "^0.9.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "recharts": "^2.8.0",
    "systeminformation": "^5.21.0"
  },
  "build": {
    "appId": "com.copiloto.desktop",
    "productName": "Duckduki",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
